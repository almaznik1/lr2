# Ğ’Ğ¸Ğ·ÑƒĞ°Ğ»ÑŒĞ½Ğ°Ñ Ğ¿Ñ€Ğ¾Ğ²ĞµÑ€ĞºĞ° Ñ€Ğ°Ğ±Ğ¾Ñ‚Ñ‹ Python Ñ ĞºÑ€ÑƒÑ‚Ğ¾Ğ¹ Ğ°Ğ½Ğ¸Ğ¼Ğ°Ñ†Ğ¸ĞµĞ¹
import time
import sys
import random
import shutil
import os
import platform

class PythonTester:
    def __init__(self):
        self.terminal_width = shutil.get_terminal_size().columns
        self.colors = ['ğŸŸ¥', 'ğŸŸ§', 'ğŸŸ¨', 'ğŸŸ©', 'ğŸŸ¦', 'ğŸŸª']
        self.icons = ['âš¡', 'ğŸš€', 'ğŸ’»', 'ğŸ', 'ğŸ”¥', 'ğŸ¯', 'âœ¨', 'ğŸŒŸ']
        
    def print_centered(self, text):
        """Ğ’Ñ‹Ğ²Ğ¾Ğ´ Ñ‚ĞµĞºÑÑ‚Ğ° Ğ¿Ğ¾ Ñ†ĞµĞ½Ñ‚Ñ€Ñƒ Ñ‚ĞµÑ€Ğ¼Ğ¸Ğ½Ğ°Ğ»Ğ°"""
        # Ğ£Ğ±Ğ¸Ñ€Ğ°ĞµĞ¼ ÑĞ¼Ğ¾Ğ´Ğ·Ğ¸ Ğ¸ ÑĞ¿ĞµÑ†Ğ¸Ğ°Ğ»ÑŒĞ½Ñ‹Ğµ ÑĞ¸Ğ¼Ğ²Ğ¾Ğ»Ñ‹ Ğ´Ğ»Ñ Ğ¿Ñ€Ğ°Ğ²Ğ¸Ğ»ÑŒĞ½Ğ¾Ğ³Ğ¾ Ñ€Ğ°ÑÑ‡ĞµÑ‚Ğ° Ğ´Ğ»Ğ¸Ğ½Ñ‹
        clean_text = ''.join(char for char in text if ord(char) < 1114111)  # Ğ‘Ğ°Ğ·Ğ¾Ğ²Ñ‹Ğµ ÑĞ¸Ğ¼Ğ²Ğ¾Ğ»Ñ‹
        padding = (self.terminal_width - len(clean_text)) // 2
        print(' ' * max(0, padding) + text)
    
    def animated_header(self):
        """ĞĞ½Ğ¸Ğ¼Ğ¸Ñ€Ğ¾Ğ²Ğ°Ğ½Ğ½Ñ‹Ğ¹ Ğ·Ğ°Ğ³Ğ¾Ğ»Ğ¾Ğ²Ğ¾Ğº"""
        header_text = "ĞŸĞ ĞĞ’Ğ•Ğ ĞšĞ Ğ¡Ğ˜Ğ¡Ğ¢Ğ•ĞœĞ« PYTHON"
        frames = ['â–°', 'â–±']
        
        print()  # ĞŸÑƒÑÑ‚Ğ°Ñ ÑÑ‚Ñ€Ğ¾ĞºĞ° Ğ¿ĞµÑ€ĞµĞ´ Ğ°Ğ½Ğ¸Ğ¼Ğ°Ñ†Ğ¸ĞµĞ¹
        for i in range(10):
            frame_char = frames[i % 2]
            border_length = min(self.terminal_width // 4, 20)  # ĞĞ³Ñ€Ğ°Ğ½Ğ¸Ñ‡Ğ¸Ğ²Ğ°ĞµĞ¼ Ğ´Ğ»Ğ¸Ğ½Ñƒ Ğ³Ñ€Ğ°Ğ½Ğ¸Ñ†Ñ‹
            border = frame_char * border_length
            self.print_centered(f"{border} {header_text} {border}")
            time.sleep(0.1)
            if i < 9:
                sys.stdout.write('\033[F\033[K')  # Ğ’Ğ²ĞµÑ€Ñ… Ğ¸ Ğ¾Ñ‡Ğ¸ÑÑ‚Ğ¸Ñ‚ÑŒ ÑÑ‚Ñ€Ğ¾ĞºÑƒ
    
    def progress_bar(self, duration=5, width=40):
        """ĞšÑ€Ğ°ÑĞ¸Ğ²Ñ‹Ğ¹ Ğ¿Ñ€Ğ¾Ğ³Ñ€ĞµÑÑ-Ğ±Ğ°Ñ€ Ñ Ğ°Ğ½Ğ¸Ğ¼Ğ°Ñ†Ğ¸ĞµĞ¹"""
        # ĞĞ³Ñ€Ğ°Ğ½Ğ¸Ñ‡Ğ¸Ğ²Ğ°ĞµĞ¼ ÑˆĞ¸Ñ€Ğ¸Ğ½Ñƒ Ğ¿Ñ€Ğ¾Ğ³Ñ€ĞµÑÑ-Ğ±Ğ°Ñ€Ğ°
        width = min(width, self.terminal_width - 20)
        
        for i in range(width + 1):
            percent = i * 100 // width
            bar = 'â–ˆ' * i + 'â–‘' * (width - i)
            color_idx = min(i * len(self.colors) // width, len(self.colors)-1)
            color = self.colors[color_idx]
            icon = random.choice(self.icons)
            
            # ĞÑ‡Ğ¸Ñ‰Ğ°ĞµĞ¼ ÑÑ‚Ñ€Ğ¾ĞºÑƒ Ğ¿ĞµÑ€ĞµĞ´ Ğ²Ñ‹Ğ²Ğ¾Ğ´Ğ¾Ğ¼
            sys.stdout.write(f'\r{color} [{bar}] {percent}% {icon}')
            sys.stdout.flush()
            time.sleep(duration / width)
        print()  # ĞĞ¾Ğ²Ğ°Ñ ÑÑ‚Ñ€Ğ¾ĞºĞ° Ğ¿Ğ¾ÑĞ»Ğµ Ğ·Ğ°Ğ²ĞµÑ€ÑˆĞµĞ½Ğ¸Ñ
    
    def run_test(self, test_name, duration=2, success=True):
        """Ğ—Ğ°Ğ¿ÑƒÑĞº Ğ¾Ñ‚Ğ´ĞµĞ»ÑŒĞ½Ğ¾Ğ³Ğ¾ Ñ‚ĞµÑÑ‚Ğ° Ñ Ğ°Ğ½Ğ¸Ğ¼Ğ°Ñ†Ğ¸ĞµĞ¹"""
        print(f"\nğŸ¬ Ğ—Ğ°Ğ¿ÑƒÑĞº: {test_name}", end='', flush=True)
        
        # ĞĞ½Ğ¸Ğ¼Ğ°Ñ†Ğ¸Ñ Ğ·Ğ°Ğ³Ñ€ÑƒĞ·ĞºĞ¸
        for i in range(3):
            print('.', end='', flush=True)
            time.sleep(0.2)
        
        # Ğ˜Ğ¼Ğ¸Ñ‚Ğ°Ñ†Ğ¸Ñ Ñ€Ğ°Ğ±Ğ¾Ñ‚Ñ‹
        dots = ['   ', '.  ', '.. ', '...']
        for i in range(8):
            # ĞÑ‡Ğ¸Ñ‰Ğ°ĞµĞ¼ Ğ¿Ñ€ĞµĞ´Ñ‹Ğ´ÑƒÑ‰Ğ¸Ğ¹ Ğ²Ñ‹Ğ²Ğ¾Ğ´
            sys.stdout.write(f'\rğŸ”„ Ğ’Ñ‹Ğ¿Ğ¾Ğ»Ğ½ĞµĞ½Ğ¸Ğµ: {test_name}{dots[i % 4]}')
            sys.stdout.flush()
            time.sleep(0.15)
        
        # Ğ ĞµĞ·ÑƒĞ»ÑŒÑ‚Ğ°Ñ‚ - Ğ¾Ñ‡Ğ¸Ñ‰Ğ°ĞµĞ¼ ÑÑ‚Ñ€Ğ¾ĞºÑƒ Ğ¿ĞµÑ€ĞµĞ´ Ğ²Ñ‹Ğ²Ğ¾Ğ´Ğ¾Ğ¼ Ñ€ĞµĞ·ÑƒĞ»ÑŒÑ‚Ğ°Ñ‚Ğ°
        if success:
            result = random.choice(['âœ… Ğ£ÑĞ¿ĞµÑˆĞ½Ğ¾!', 'ğŸ‰ Ğ“Ğ¾Ñ‚Ğ¾Ğ²Ğ¾!', 'âœ¨ Ğ˜Ğ´ĞµĞ°Ğ»ÑŒĞ½Ğ¾!', 'ğŸš€ Ğ’Ñ‹Ğ¿Ğ¾Ğ»Ğ½ĞµĞ½Ğ¾!'])
            sys.stdout.write(f'\r{result} {test_name}                    \n')  # Ğ”Ğ¾Ğ±Ğ°Ğ²Ğ»ÑĞµĞ¼ Ğ¿Ñ€Ğ¾Ğ±ĞµĞ»Ñ‹ Ğ´Ğ»Ñ Ğ¾Ñ‡Ğ¸ÑÑ‚ĞºĞ¸
        else:
            sys.stdout.write(f'\râŒ ĞÑˆĞ¸Ğ±ĞºĞ°! {test_name}                    \n')
        
        sys.stdout.flush()
        time.sleep(0.3)
    
    def system_info(self):
        """Ğ’Ñ‹Ğ²Ğ¾Ğ´ Ğ¸Ğ½Ñ„Ğ¾Ñ€Ğ¼Ğ°Ñ†Ğ¸Ğ¸ Ğ¾ ÑĞ¸ÑÑ‚ĞµĞ¼Ğµ"""
        print("\nğŸ“Š Ğ˜ĞĞ¤ĞĞ ĞœĞĞ¦Ğ˜Ğ¯ Ğ Ğ¡Ğ˜Ğ¡Ğ¢Ğ•ĞœĞ•:")
        print("=" * min(50, self.terminal_width))
        print(f"ğŸ’» Python: {platform.python_version()}")
        print(f"ğŸ–¥ï¸  ĞĞ¡: {platform.system()} {platform.release()}")
        print(f"ğŸ‘¤ ĞŸĞ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ñ‚ĞµĞ»ÑŒ: {platform.node()}")
        print(f"ğŸ“ Ğ Ğ°Ğ±Ğ¾Ñ‡Ğ°Ñ Ğ´Ğ¸Ñ€ĞµĞºÑ‚Ğ¾Ñ€Ğ¸Ñ: {os.getcwd()}")
    
    def performance_test(self):
        """Ğ‘Ñ‹ÑÑ‚Ñ€Ñ‹Ğ¹ Ñ‚ĞµÑÑ‚ Ğ¿Ñ€Ğ¾Ğ¸Ğ·Ğ²Ğ¾Ğ´Ğ¸Ñ‚ĞµĞ»ÑŒĞ½Ğ¾ÑÑ‚Ğ¸"""
        print("\nâš¡ Ğ¢Ğ•Ğ¡Ğ¢ ĞŸĞ ĞĞ˜Ğ—Ğ’ĞĞ”Ğ˜Ğ¢Ğ•Ğ›Ğ¬ĞĞĞ¡Ğ¢Ğ˜:")
        
        # Ğ¢ĞµÑÑ‚ Ğ²Ñ‹Ñ‡Ğ¸ÑĞ»ĞµĞ½Ğ¸Ğ¹
        start_time = time.time()
        result = sum(i**2 for i in range(100000))
        calc_time = time.time() - start_time
        
        # ĞÑ†ĞµĞ½ĞºĞ° Ğ¿Ñ€Ğ¾Ğ¸Ğ·Ğ²Ğ¾Ğ´Ğ¸Ñ‚ĞµĞ»ÑŒĞ½Ğ¾ÑÑ‚Ğ¸
        if calc_time < 0.01:
            rating = "ğŸ”¥ Ğ¡Ğ£ĞŸĞ•Ğ  Ğ‘Ğ«Ğ¡Ğ¢Ğ Ğ!"
        elif calc_time < 0.05:
            rating = "ğŸš€ ĞĞ¢Ğ›Ğ˜Ğ§ĞĞ!"
        else:
            rating = "âš¡ ĞĞĞ ĞœĞĞ›Ğ¬ĞĞ"
        
        print(f"Ğ’Ñ‹Ñ‡Ğ¸ÑĞ»ĞµĞ½Ğ¸Ñ: {rating} ({calc_time:.3f} ÑĞµĞº)")
        
        # ĞĞ½Ğ¸Ğ¼Ğ°Ñ†Ğ¸Ñ Ğ¾Ñ†ĞµĞ½ĞºĞ¸
        for i in range(3):
            stars = 'â˜…' * (i + 1) + 'â˜†' * (2 - i)
            sys.stdout.write(f'\rĞ ĞµĞ¹Ñ‚Ğ¸Ğ½Ğ³ ÑĞºĞ¾Ñ€Ğ¾ÑÑ‚Ğ¸: [{stars}]')
            sys.stdout.flush()
            time.sleep(0.3)
        print(f'\rĞ ĞµĞ¹Ñ‚Ğ¸Ğ½Ğ³ ÑĞºĞ¾Ñ€Ğ¾ÑÑ‚Ğ¸: [â˜…â˜…â˜…] {rating}                    ')
    
    def final_celebration(self):
        """Ğ¤Ğ¸Ğ½Ğ°Ğ»ÑŒĞ½Ğ°Ñ Ğ°Ğ½Ğ¸Ğ¼Ğ°Ñ†Ğ¸Ñ"""
        print("\n")
        messages = [
            "ğŸŠ Ğ’Ğ¡Ğ• ĞŸĞ ĞĞ’Ğ•Ğ ĞšĞ˜ Ğ—ĞĞ’Ğ•Ğ Ğ¨Ğ•ĞĞ«!",
            "ğŸš€ PYTHON Ğ“ĞĞ¢ĞĞ’ Ğš Ğ ĞĞ‘ĞĞ¢Ğ•!",
            "ğŸ’» ĞĞĞ§Ğ˜ĞĞĞ•Ğœ ĞŸĞ ĞĞ“Ğ ĞĞœĞœĞ˜Ğ ĞĞ’ĞĞ¢Ğ¬!"
        ]
        
        for message in messages:
            for i in range(3):
                fireworks = 'âœ¨' * min(i + 1, 3)
                centered_line = f"{fireworks} {message} {fireworks}"
                # ĞÑ‡Ğ¸Ñ‰Ğ°ĞµĞ¼ Ğ¿Ñ€ĞµĞ´Ñ‹Ğ´ÑƒÑ‰ÑƒÑ ÑÑ‚Ñ€Ğ¾ĞºÑƒ
                sys.stdout.write('\033[K')  # ĞÑ‡Ğ¸ÑÑ‚Ğ¸Ñ‚ÑŒ Ñ‚ĞµĞºÑƒÑ‰ÑƒÑ ÑÑ‚Ñ€Ğ¾ĞºÑƒ
                self.print_centered(centered_line)
                time.sleep(0.3)
                if i < 2:
                    sys.stdout.write('\033[F')  # ĞŸĞµÑ€ĞµĞ¼ĞµÑÑ‚Ğ¸Ñ‚ÑŒ ĞºÑƒÑ€ÑĞ¾Ñ€ Ğ²Ğ²ĞµÑ€Ñ…
        
        # Ğ¤Ğ¸Ğ½Ğ°Ğ»ÑŒĞ½Ñ‹Ğ¹ Ğ²Ğ·Ñ€Ñ‹Ğ²
        print("\n" + "ğŸ‡" * min(self.terminal_width // 3, 30))
        self.print_centered("ğŸ‰ Ğ”ĞĞ‘Ğ Ğ ĞŸĞĞ–ĞĞ›ĞĞ’ĞĞ¢Ğ¬ Ğ’ ĞœĞ˜Ğ  PYTHON! ğŸ‰")
        print("ğŸ‡" * min(self.terminal_width // 3, 30))
        print()  # ĞŸÑƒÑÑ‚Ğ°Ñ ÑÑ‚Ñ€Ğ¾ĞºĞ° Ğ² ĞºĞ¾Ğ½Ñ†Ğµ

def main():
    tester = PythonTester()
    
    # Ğ—Ğ°Ğ¿ÑƒÑĞº Ğ²ÑĞµÑ… Ñ‚ĞµÑÑ‚Ğ¾Ğ²
    tester.animated_header()
    
    tests = [
        "ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ° ÑĞ¸Ğ½Ñ‚Ğ°ĞºÑĞ¸ÑĞ° Python",
        "Ğ¢ĞµÑÑ‚ Ğ¼Ğ°Ñ‚ĞµĞ¼Ğ°Ñ‚Ğ¸Ñ‡ĞµÑĞºĞ¸Ñ… Ğ¾Ğ¿ĞµÑ€Ğ°Ñ†Ğ¸Ğ¹", 
        "ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ° Ñ€Ğ°Ğ±Ğ¾Ñ‚Ñ‹ Ñ Ğ¿Ğ°Ğ¼ÑÑ‚ÑŒÑ",
        "Ğ¢ĞµÑÑ‚Ğ¸Ñ€Ğ¾Ğ²Ğ°Ğ½Ğ¸Ğµ Ğ¸Ğ¼Ğ¿Ğ¾Ñ€Ñ‚Ğ° Ğ¼Ğ¾Ğ´ÑƒĞ»ĞµĞ¹",
        "ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ° Ğ²Ğ²Ğ¾Ğ´Ğ°-Ğ²Ñ‹Ğ²Ğ¾Ğ´Ğ°",
        "Ğ¢ĞµÑÑ‚ Ğ¾Ğ±Ñ€Ğ°Ğ±Ğ¾Ñ‚ĞºĞ¸ Ğ¸ÑĞºĞ»ÑÑ‡ĞµĞ½Ğ¸Ğ¹",
        "ĞĞ¿Ñ‚Ğ¸Ğ¼Ğ¸Ğ·Ğ°Ñ†Ğ¸Ñ Ğ¿Ñ€Ğ¾Ğ¸Ğ·Ğ²Ğ¾Ğ´Ğ¸Ñ‚ĞµĞ»ÑŒĞ½Ğ¾ÑÑ‚Ğ¸",
        "Ğ¤Ğ¸Ğ½Ğ°Ğ»ÑŒĞ½Ğ°Ñ Ğ¿Ñ€Ğ¾Ğ²ĞµÑ€ĞºĞ° ÑĞ¸ÑÑ‚ĞµĞ¼Ñ‹"
    ]
    
    print("\nğŸ§ª Ğ—ĞĞŸĞ£Ğ¡Ğš Ğ¢Ğ•Ğ¡Ğ¢ĞĞ’Ğ«Ğ¥ ĞŸĞ ĞĞ¦Ğ•Ğ”Ğ£Ğ :")
    print("=" * min(50, tester.terminal_width))
    
    for test in tests:
        tester.run_test(test, success=True)
    
    tester.system_info()
    tester.performance_test()
    
    # Ğ¤Ğ¸Ğ½Ğ°Ğ»ÑŒĞ½Ñ‹Ğ¹ Ğ¿Ñ€Ğ¾Ğ³Ñ€ĞµÑÑ-Ğ±Ğ°Ñ€
    print("\nğŸ“ˆ Ğ¤Ğ˜ĞĞĞ›Ğ¬ĞĞĞ¯ Ğ—ĞĞ“Ğ Ğ£Ğ—ĞšĞ Ğ¡Ğ˜Ğ¡Ğ¢Ğ•ĞœĞ«:")
    tester.progress_bar(duration=3)
    
    tester.final_celebration()

if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        print("\n\nâš ï¸  ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ° Ğ¿Ñ€ĞµÑ€Ğ²Ğ°Ğ½Ğ° Ğ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ñ‚ĞµĞ»ĞµĞ¼")
    except Exception as e:
        print(f"\n\nâŒ ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ Ğ¿Ñ€Ğ¾Ğ²ĞµÑ€ĞºĞµ: {e}")